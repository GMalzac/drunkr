<h1>Drinks#index</h1>

<div class="card-deck">
  <% counter = 0 %>
  <% @drinks.each do |drink| %>
    <div class="card card-margin">
      <%= image_tag "default_drink.png", class:"card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= drink.name %></h5>
      </div>
      <div class="card-footer">
        <p class="card-text"><%= drink.volume %></p>
        <p class="card-text"><%= drink.alcohol_rate %></p>
      </div>
      <div class="card-footer">
        <%= link_to "Add", user_drinks_create_path(drink), class: "btn btn-success" %>
      </div>
    </div>
    <!-- Force next card to break to new line every 3 card-->
    <% counter += 1 %>
    <% if counter % 4 == 0 %>
      <div class="w-100"></div>
    <% end %>
  <% end %>
</div>
